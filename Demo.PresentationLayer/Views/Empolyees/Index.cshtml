@model IEnumerable<EmpolyeeDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Empolyees</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Empolyees" asp-action="Create">Create Empolyee</a>
<br />
@if (Model.Any())
{
    <div class="m-2">
        <form asp-action="index" class="row offset-2" method="get">
            <div class="col-8">
                <input class="form-control" type="text" name="EmployeeSearchName" placeholder="Search Employee By Name" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-outline-success" value="Search" />

            </div>
        </form>

    </div>
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.EmpType)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <td>@Html.DisplayNameFor(e => e.DepartmentName)</td>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                <th>@Html.DisplayNameFor(e => e.EmpGender)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var empolyee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e => empolyee.Name)</td>
                    <td>@Html.DisplayFor(e => empolyee.Email)</td>
                    <td>@Html.DisplayFor(e => empolyee.EmpType)</td>
                    <td>@Html.DisplayFor(e => empolyee.Age)</td>
                    <td>@Html.DisplayFor(e => empolyee.DepartmentName)</td>
                    <td>@Html.DisplayFor(e => empolyee.Salary)</td>
                    <td>
                        <i class="fa @(empolyee.IsActive ? "fa-solid fa-circle-check text-success" : "fa-times-circle text-danger")"></i>
                    </td>
                    <td>@Html.DisplayFor(e => empolyee.EmpGender)</td>

                    @* Fix: Pass empolyee.Id directly if _ButtonsPartialView expects int, or use empolyee.Id.ToString() if it expects string *@
                    <partial name="_ButtonsPartialView" model="empolyee.Id.ToString()" />

                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@empolyee.Id">
                            <i class="fas fa-trash"></i> Delete
                        </button>

                                                      <!--Delete Modal-->
                        <div class="modal fade" id="DeleteModal-@empolyee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Empolyee</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are You Sure to Delete Empolyee @empolyee.Name?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-controller="Empolyees" asp-route-id="@empolyee.Id" class="mt-4">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Empolyees Found !!</h2>
    </div>
}
