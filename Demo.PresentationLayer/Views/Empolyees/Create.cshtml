@model EmpolyeeViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Empolyee</h1>

    <form method="post" asp-controller="Empolyees" asp-action="Create" class = "row-cols-8" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <partial name="PartialViews/CreateEditPartialView" />

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a class="btn btn-outline-dark" asp-controller="Empolyees" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>



