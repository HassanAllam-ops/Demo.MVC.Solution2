@model IdentityRole
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Role</h1>

    <form method="post" asp-controller="Roles" asp-action="Create" class="row-cols-8" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a class="btn btn-outline-dark" asp-controller="Roles" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

